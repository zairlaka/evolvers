<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.start_time %></td>
        <td><%= appointment.end_time %></td>
        <td><%= appointment.doctor.name %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path, class:"btn btn-default btn-sm" %>

<%= link_to 'All Doctors', doctors_path, class:"btn btn-default btn-sm" %>