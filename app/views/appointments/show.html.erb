<div class="col-md-6 col-md-offset-3">
  <p id="notice"><%= notice %></p>

  <table class="table table-hover">
  <thead>
    <tr>
      <th colspan="2" class="text-center"><h1>Appointment Details</h1></th>
    </tr>
    </thead>
    <tr>
      <td>
        <strong>Start time:</strong>
      </td>
      <td class="f_time">
        <%= @appointment.start_time %>
      </td>
    <tr>
      <td>
        <strong>End time:</strong>
      <td class="f_time">
        <%= @appointment.end_time %>
      </td>
    </tr>

    <tr>
      <td>
        <strong>Doctor:</strong>
      </td>
      <td>
        <%= @appointment.doctor.name %>
      </td>
    </tr>
  </table>

  <%= link_to 'Edit', edit_appointment_path(@appointment), class: "btn btn-default btn-sm mt-4" %>
  <%= link_to 'Back', appointments_path, class: "btn btn-default btn-sm mt-4" %>
</div>