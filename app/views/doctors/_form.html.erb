<%= form_with(model: doctor, local: true) do |form| %>
  <% if doctor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

      <ul>
      <% doctor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :phone %>
      <%= form.text_field :phone, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :specialist %>
      <%# form.text_field :specialist, class: "form-control", required: true %>
      <%= form.select :specialist, options_for_select(Doctor.specialists.map { |v| [v[1],v[0]] }, @doctor.specialist.present? ? @doctor.specialist : ''), {include_blank: "Select Speciality"}, {id: "spec", class: "form-control", required: true} %>
    </div>

    <div class="form-group">
      <%= form.label :bio %>
      <%= form.text_area :bio, class: "form-control", required: true %>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-success btn' %>
      <%= link_to 'Back', doctors_path, class: "btn btn-default btn-sm  pull-right" %>
    </div>
  </div>
  
<% end %>
